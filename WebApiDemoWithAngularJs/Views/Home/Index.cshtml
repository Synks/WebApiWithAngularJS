@section scripts{
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularApp.js"></script>
    }

<div ng-app="personModule">
    <div ng-controller="personController">
        <h3>List of Persons</h3>
        <table>
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Middle Name</td>
                    <td>Last Name</td>
                    <td>Primary Email Address</td>
                    <td>Secondary Email Address</td>
                    <td>Mobile Number</td>
                    <td>Phone Number</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="person in personsData">
                    <td>{{person.FirstName}}</td>
                    <td>{{person.MiddleName}}</td>
                    <td>{{person.LastName}}</td>
                    <td>{{person.PrimaryEmailAddress}}</td>
                    <td>{{person.SecondaryEmailAddress}}</td>
                    <td>{{person.MobileNumber}}</td>
                    <td>{{person.PhoneNumber}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

